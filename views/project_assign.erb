<h1>Assign <%=@project.name() %> to an employee </h1>

<form action="/projects/<%= @project.id()%>/assign" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name"></label>
  <input id="name" name="name" type="hidden" value="<%= @project.name %>">

  <label for="employee_id">Select an Employee</label>
  <select name="employee_id">
    <% Employee.all.each do |employee| %>
      <option value="<%= employee.id %>"><%= employee.name %></option>
    <% end %>
  </select><br>

  <button class="btn btn-default" type="submit">Assign Employee</button>
</form>
