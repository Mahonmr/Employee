<h1>Assign <%=@employee.name() %> to a division </h1>

<form action="/employees/<%= @employee.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name"></label>
  <input id="name" name="name" type="hidden" value="<%= @employee.name %>">

  <label for="division_id"></label>
  <input id="division_id" name="division_id" type="number" value="<%= @employee.division_id %>">

  <button type="submit">Update</button>
</form>
